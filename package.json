{
  "name": "aurral",
  "version": "1.0.0",
  "description": "Aurral artist request manager",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "cd frontend && npm install && npm run build && cd ..",
    "start": "node server.js",
    "dev": "npm run install:frontend && concurrently --kill-others-on-fail \"npm run dev:backend\" \"npm run wait-and-dev:frontend\"",
    "wait-and-dev:frontend": "sleep 3 && cd frontend && npm run dev",
    "dev:backend": "nodemon server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ..",
    "install:frontend": "cd frontend && npm install && cd ..",
    "docker:build": "docker build -t aurral .",
    "docker:run": "docker run -p 3001:3001 -v $(pwd)/backend/data:/app/data aurral"
  },
  "keywords": [
    "lidarr",
    "musicbrainz",
    "music",
    "request"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "lowdb": "^7.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "watch": ["backend", "server.js"],
    "ext": "js,json",
    "ignore": ["node_modules", "frontend", "backend/data", "*.log", "frontend/dist"],
    "delay": 2000,
    "restartable": "rs"
  }
}
